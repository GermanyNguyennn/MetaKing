<!-- Checkout Start -->
<form method="post">
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <div class="mb-4">                   
                    <h4 class="font-weight-semi-bold mb-4">Billing Address</h4>
                    <div class="row">
                        <div class="col-md form-group">
                            <label>Name</label>
                            <input class="form-control" type="text" asp-for="Order.CustomerName" placeholder="Name" required>
                            <span asp-validation-for="Order.CustomerName" class="text-danger"></span>

                        </div>
                            
                        <div class="col-md-6 form-group">
                            <label>Phone Number</label>
                            <input class="form-control" type="text" asp-for="Order.CustomerPhoneNumber" placeholder="Phone Number" required>
                            <span asp-validation-for="Order.CustomerPhoneNumber" class="text-danger"></span>

                        </div>                           

                        <div class="col-md-6 form-group">
                            <label>Chọn Tỉnh Thành</label>
                            <select class="form-control" id="tinh" name="tinh" title="Chọn Tỉnh Thành">
                                <option value="0">Tỉnh Thành</option>
                            </select>
                            <input type="hidden" asp-for="Order.Province" id="provinceHidden" required />

                        </div>

                        <div class="col-md-6 form-group">
                            <label>Chọn Phường Xã</label>
                            <select class="form-control" id="quan" name="quan" title="Chọn Phường Xã">
                                <option value="0">Phường Xã</option>
                            </select>
                            <input type="hidden" asp-for="Order.Commune" id="communeHidden" required />

                        </div>

                        <div class="col-md-12 form-group">
                            <label>Address</label>
                            <input class="form-control" type="text" asp-for="Order.CustomerAddress" placeholder="Address" required>
                            <span asp-validation-for="Order.CustomerAddress" class="text-danger"></span>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Order Total</h4>
                    </div>
                    <div class="card-body">
                        <h5 class="font-weight-medium mb-3">Products</h5>
                        @if (Model.CartItems != null && Model.CartItems.Any())
                        {
                            @foreach (var item in Model.CartItems)
                            {
                                <div class="d-flex justify-content-between">
                                    <p>@item.Product.Name x @item.Quantity</p>
                                    <p>@((item.Product.SellPrice * item.Quantity).ToString("N0", new System.Globalization.CultureInfo("vi-VN")))</p>
                                </div>
                            }
                        }
                        else
                        {
                            <p>No items in cart.</p>
                        }
                        <hr />
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Subtotal</h6>
                            <h6 class="font-weight-medium">@Model.SubTotal.ToString("N0", new System.Globalization.CultureInfo("vi-VN"))</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">@Model.ShippingFee.ToString("N0", new System.Globalization.CultureInfo("vi-VN"))</h6>
                        </div>
                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="font-weight-bold">Total</h5>
                            <h5 class="font-weight-bold">@Model.Total.ToString("N0", new System.Globalization.CultureInfo("vi-VN"))</h5>
                        </div>
                    </div>
                </div>
                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Payment</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="paypal">
                                <label class="custom-control-label" for="paypal">Paypal</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="directcheck">
                                <label class="custom-control-label" for="directcheck">Direct Check</label>
                            </div>
                        </div>
                        <div class="">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="banktransfer">
                                <label class="custom-control-label" for="banktransfer">Bank Transfer</label>
                            </div>
                        </div>
                    </div>

                    <button class="btn btn-lg btn-block btn-primary font-weight-bold my-3 py-3" type="submit"> Place Order </button>
                        
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Checkout End -->
@section scripts {
    @if (Model.CreateStatus != null)
    {
        <script>
            Swal.fire({
                icon: '@(Model.CreateStatus == true ? "success" : "error")',
                title: '@(Model.CreateStatus == true ? "Success" : "Error")',
                text: '@(Model.CreateStatus == true ? "Order created successfully!" : "Order created unsuccessfully!")',
                showConfirmButton: true,
                confirmButtonText: "OK"
            }).then((result) => {
                if (@(Model.CreateStatus == true ? "true" : "false")) {
                    window.location.href = "/";
                }
            });
        </script>
    }

    <script>
        $(document).ready(function () {

            $.getJSON('https://esgoo.net/api-tinhthanh-new/1/0.htm', function (data_tinh) {
                if (data_tinh.error == 0) {

                    $.each(data_tinh.data, function (key, val) {
                        $("#tinh").append('<option value="' + val.id + '">' + val.full_name + '</option>');
                    });

                    $("#tinh").change(function () {

                        let province = $("#tinh option:selected").text();
                        if (province === "Tỉnh Thành") province = "";

                        $("#provinceHidden").val(province).trigger("change");

                        let idtinh = $(this).val();

                        $.getJSON('https://esgoo.net/api-tinhthanh-new/2/' + idtinh + '.htm', function (data_quan) {
                            if (data_quan.error == 0) {
                                $("#quan").html('<option value="0">Phường Xã</option>');
                                $.each(data_quan.data, function (k, q) {
                                    $("#quan").append('<option value="' + q.id + '">' + q.full_name + '</option>');
                                });
                            }
                        });

                    });

                    $("#quan").change(function () {

                        let commune = $("#quan option:selected").text();
                        if (commune === "Phường Xã") commune = "";

                        $("#communeHidden").val(commune).trigger("change");
                    });
                }
            });

        });
    </script>

    @if (!ModelState.IsValid)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Lỗi',
                text: '@string.Join(" ", ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage))',
                confirmButtonText: 'OK'
            });
        </script>
    }

    <partial name="_ValidationScriptsPartial" />
}
