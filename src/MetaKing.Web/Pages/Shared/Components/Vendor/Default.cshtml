@using MetaKing.Catalog.Manufacturers
@model MetaKing.Models.VendorCacheItem

<!-- Vendor Start -->
<div class="container-fluid py-5">
    <div class="row px-xl-5">
        <div class="col">
            <div class="owl-carousel vendor-carousel">
                @foreach (var item in Model.Manufacturers)
                {
                    <div class="vendor-item border p-4">
                        <img src="@item.CoverPicture" alt="@item.Name">
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Vendor End -->